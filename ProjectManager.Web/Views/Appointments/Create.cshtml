@model ProjectManager.Web.Models.ViewModel.AppointmentCreateViewModel
@{
    ViewData["Title"] = "CreateAppointment";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">


            <div class="form-group">
                <label asp-for="Appointment.AppoName" class="control-label"></label>
                <input asp-for="Appointment.AppoName" class="form-control" />
                <span asp-validation-for="Appointment.AppoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.AppoType" class="control-label"></label>
                <select asp-for="Appointment.AppoType" asp-items="Html.GetEnumSelectList<ProjectManager.Core.Enum.AppointmentType>()" class="form-control"></select>
                <span asp-validation-for="Appointment.AppoType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Startdate" class="control-label"></label>
                <input asp-for="Appointment.Startdate" type="date" class="form-control" />
                <span asp-validation-for="Appointment.Startdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Enddate" class="control-label"></label>
                <input asp-for="Appointment.Enddate" type="date" class="form-control" />
                <span asp-validation-for="Appointment.Enddate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Appointment.Information" class="control-label"></label>
                <input asp-for="Appointment.Information" class="form-control" />
                <span asp-validation-for="Appointment.Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-sucess" />
            </div>
            <input type="hidden" value="@Model.Employee.Id" asp-for="Appointment.EmployeeId" />
            <input type="hidden" value="@Model.Employee" asp-for="Appointment.Employee" />
        </form>
    </div>
</div>

<li><a asp-controller="Employees" asp-action="Feed" asp-route-employeeId="@Model.Employee.Id" class="btn btn-primary">Back</a></li>
