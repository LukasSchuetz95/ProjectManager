@model ProjectManager.Web.Models.ViewModel.AppointmentDetailViewModel

@{
    ViewData["Title"] = "Details";
}


<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-5">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2>Appointment Detail</h2>
            </div>

            <form>
                <fieldset>
                    <p>
                        <label>Name:</label>
                        <label>@Model.Appointment.AppoName</label>
                    </p>
                    <p>
                        <label>Typ:</label>
                        <label>@Model.Appointment.AppoType</label>

                    </p>

                    <p>
                        <label>From:</label>
                        <label>@Model.Appointment.Startdate</label>
                    </p>
                    <p>
                        <label>To:</label>
                        <label>@Model.Appointment.Enddate</label>
                    </p>
                    <p>
                        <label>Information:</label>
                        <label>@Model.Appointment.Information</label>
                    </p>
                </fieldset>
            </form>

            <a asp-controller="Employees" asp-action="Feed"  asp-route-employeeId="@Model.Appointment.EmployeeId" class="btn btn-primary"> Back to Dashboard</a>
        </div>
    </div>
</div>