@model IEnumerable<ProjectManager.Core.Entities.Project>

@{
    ViewData["Title"] = "Projekte";
}

<h2>Projekte</h2>

<p>
    <a asp-controller="Project" asp-action="Create" class="btn btn-default">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Projekt</th>
            <th>Deadline</th>
            <th>Projektnummer</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.ProjectName</td>
            <td>@item.Deadline</td>
            <td>@item.Id</td>
            <td>
                <a asp-controller="Project" asp-action="Edit" asp-route-itemId="@item.Id">Edit</a>
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
}
    </tbody>
</table>
