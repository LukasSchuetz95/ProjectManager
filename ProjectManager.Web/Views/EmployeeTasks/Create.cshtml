@model ProjectManager.Web.Models.ViewModel.EmployeeTasksCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h2>Mitarbeiter zum Projekt "@Model.EmployeeTasks.Task.Id" hinzufügen</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </form>
    </div>
</div>
<h2>Projekt-Mitglieder</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Job</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.EmployeeProjects)
        {
            <tr>
                    <td>@emp.Employee.ToString()</td>
                    <td>@emp.Employee.Status</td>
                    <td>@emp.Employee.Job</td>
                    <td>
                        <form asp-action="Delete" asp-route-empProId="@emp.Id">
                            <input type="submit" value="Löschen" class="btn btn-danger" />
                        </form>
                        @*<a asp-controller="Projects" asp-action="Edit" >Entfernen</a>*@
                    </td>
                </tr>        
        }
    </tbody>
</table>

<h2>Alle Mitarbeiter (ohne Projekt-Mitglieder)</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Status</th>
            <th>Job</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model.EmployeeProjects)
        {
            <tr>
                <td>@emp.Employee.ToString()</td>
                <td>@emp.Employee.Status</td>
                <td>@emp.Employee.Job</td>
                <td>
                    <form asp-action="Create" asp-controller="EmployeeTasks" asp-route-employeeId="@emp.Id" asp-route-projectId="@Model.EmployeeTasks.TaskId">
                        <input type="submit" value="Mitarbeiter hinzufügen" class="btn btn-success" />
                    </form>
                    @*<div class="form-group">
                            <input type="submit" value="Mitarbeiter hinzufügen" class="btn btn-success" />
                        </div>*@
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Task" asp-action="List" class="btn btn-default">Zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}