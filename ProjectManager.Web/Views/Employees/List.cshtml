@model ProjectManager.Web.Models.ViewModel.EmployeesListViewModel

@{
    ViewData["Title"] = "LookingFor";
}

<!doctype html>

<html lang="de">
<head>
    <title></title>
    <meta charset="utf-8" />
</head>
<body>
    <header>
        <h3>CreateAppointment</h3>
    </header>
    <form asp-controller="Employees" asp-action="List">
        <div class="form-group">
            <label asp-for="FilterLastname"></label>
            <input asp-for="FilterLastname" class="form-control" />
            <span asp-validation-for="FilterLastname" class="text-danger"></span>
        </div>
        <input type="submit" value="Nachname filtern" class="btn btn-primary" />
    </form>
    <form asp-controller="Employees" asp-action="List">
        <div class="form-group">
            <label asp-for="FilterFirstname"></label>
            <input asp-for="FilterFirstname" class="form-control" />
            <span asp-validation-for="FilterFirstname" class="text-danger"></span>
        </div>
        <input type="submit" value="Vornmae filtern" class="btn btn-primary" size="50"/>
    </form>
    <form asp-controller="Employees" asp-action="List">
        <div class="form-group">
            <label asp-for="FilterJob"></label>
            <input asp-for="FilterJob" class="form-control" />
            <span asp-validation-for="FilterJob" class="text-danger"></span>
        </div>
        <input type="submit" value="Job filtern" class="btn btn-primary" size="50"/>
    </form>
    <form asp-controller="Employees" asp-action="List">
        <div class="form-group">
            <label asp-for="FilterDepartmentName"></label>
            <input asp-for="FilterDepartmentName" class="form-control" />
            <span asp-validation-for="FilterDepartmentName" class="text-danger" size="50"></span>
        </div>
        <input type="submit" value="Abteilung filtern" class="btn btn-primary" size="50" />
    </form>

    <table class="table">
        <tr>
            <th>Nachname</th>
            <th>Vorname</th>
            <th>Job</th>
            <th>Abteilung</th>
        </tr>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td><a asp-controller="Employees" asp-action="Profil" asp-route-employeeId="@employee.Id">@employee.Lastname</a></td>
                <td><a asp-controller="Employees" asp-action="Profil" asp-route-employeeId="@employee.Id">@employee.Firstname</a></td>
                <td>@employee.Job</td>
                <td>@employee.Department.DeptName</td>
            </tr>
        }
    </table>
</body>
</html>

