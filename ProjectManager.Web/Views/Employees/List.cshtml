@model ProjectManager.Web.Models.ViewModel.EmployeesListViewModel

@{
    ViewData["Title"] = "LookingFor";
}

<!doctype html>

<html lang="de">
<head>
    <title></title>
    <meta charset="utf-8" />
</head>
<body>
    <header>
        <h3>Mitarbeiter suchen</h3>
    </header>
    <form asp-controller="Employees" asp-action="List">
        <div class="dropdown-menu-left">
            <div>
                <input asp-for="LastnameFilter" type="submit" value="Nachname filtern" class="btn btn-primary" style="width:200px" />
                <span asp-validation-for="LastnameFilter" class="text-danger" />

                <input asp-for="FirstnameFilter" type="submit" value="Vorname filtern" class="btn btn-primary" style="width:200px" />
                <span asp-validation-for="FirstnameFilter" class="text-danger" />

                <input asp-for="JobFilter" type="submit" value="Job filtern" class="btn btn-primary" style="width:200px" />
                <span asp-validation-for="JobFilter" class="text-danger" />

                <input asp-for="DepartmentFilter" type="submit" value="Abteilung filtern" class="btn btn-primary" style="width:200px" />
                <span asp-validation-for="DepartmentFilter" class="text-danger" />

            </div>


            <input asp-for="Filter" value="@Model.Filter" class="form-control" style="width:812px" />
            <span asp-validation-for="Filter" class="text-danger"></span>

            <input asp-for="SwitchOrderLastName" value="@Model.SwitchOrderLastName" type="hidden" />
            <input asp-for="SwitchOrderFirstName" value="@Model.SwitchOrderFirstName" type="hidden" />
            <input asp-for="SwitchOrderJob" value="@Model.SwitchOrderJob" type="hidden" />
            <input asp-for="Filter" type="hidden" value="@Model.Filter" />
        </div>
    </form>


    <table class="table" style="width:812px">
        <tr>
            <th></th>
            <th>Nachname</th>
            <th>Vorname</th>
            <th>Job</th>
            <th>Abteilung</th>
        </tr>
        @foreach (var employee in Model.Employees)
        {
            <tr>
                <td class="icon-bar" title="Klicken Sie hier um auf das Profil zu gelangen"><a class="active" asp-controller="Employees" asp-action="Profil" asp-route-employeeId="@employee.Id"><i class="glyphicon glyphicon-user"></i></a></td>
                <td>@employee.Lastname</td>
                <td>@employee.Firstname</td>
                <td>@employee.Job</td>
                <td>@employee.Department.DeptName</td>
            </tr>
        }
    </table>
</body>
</html>



