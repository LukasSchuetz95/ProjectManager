@model ProjectManager.Web.Models.ViewModel.DepartmentsViewModel
@{
    ViewData["Title"] = "Details";
}

<!doctype html>

<html lang="de">
<head>
    <title></title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <form asp-controller="Departments" asp-action="Details" class="form-inline">
        <div class="container" style="width:875px">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h2>@Model.Department.DeptName</h2>
                        </div>
                        <div class="panel-body">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th>Lastname</th>
                                        <th>Firstname</th>
                                        <th>Job</th>
                                    </tr>
                                </thead>
                                @foreach (var employee in Model.EmployeeList)
                                {
                                    <tr title="Click here to see the dashboard of this employee!" onclick="location.href = '@(Url.Action("Feed", "Employees", new { employeeId = employee.Id}))'">
                                        <td class="icon-bar" title="Click here to see the profil of this person"><a class="active" asp-controller="Employees" asp-action="Profil" asp-route-employeeId="@employee.Id"><i class="fa fa-user" aria-hidden="true"></i></a></td>
                                        <td>@employee.Lastname</td>
                                        <td>@employee.Firstname</td>
                                        <td>@employee.Job</td>
                                    </tr>
                                }
                            </table>

                            <div class="form-group">
                                <a asp-controller="Departments" asp-action="List" class="btn btn-primary" style="width:200px">Back</a>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </form>
</body>
</html>