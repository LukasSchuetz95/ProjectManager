@model ProjectManager.Web.Models.ViewModel.Departments.CreateDepartmentViewModel
@{
    ViewData["Title"] = "Create";
}

<!doctype html>

<html lang="de">
<head>
    <title></title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="width:500px">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2>Create department</h2>
                    </div>
                    @if (Model.Success == true)
                    {
                        <div class="panel-success">
                            <div class="panel-heading">
                                <h4>Saveing was successful!</h4>
                            </div>
                        </div>
                    }

                    @if (Model.Error == true)
                    {
                        <div class="panel-danger">
                            <div class="panel-heading">
                                <h4>The choosen name is already existing!</h4>
                            </div>
                        </div>
                    }
                    <div class="panel-body">
                        <div class="row">

                            <form asp-controller="Departments" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Department.DeptName" class="control-label"></label>
                                    <input required="true" asp-for="Department.DeptName" class="form-control" />
                                    <span asp-validation-for="Department.DeptName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Department.DeptLocation" class="control-label"></label>
                                    <input required="true" asp-for="Department.DeptLocation" class="form-control" />
                                    <span asp-validation-for="Department.DeptLocation" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create Department" class="btn btn-primary" style="width:232px" />

                                    <a asp-controller="Departments" asp-action="@Model.RouteString" asp-route-departmentId="@Model.RouteId" class="btn btn-success" style="width:232px">Back</a>
                                </div>
                                <input type="hidden" value="@Model.RouteString" asp-for="RouteString" />
                                <input type="hidden" value="@Model.RouteId" asp-for="RouteId" />
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</body>
</html>
