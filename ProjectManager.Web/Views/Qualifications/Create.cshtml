@model ProjectManager.Core.Entities.Qualification

@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-9">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="page-header">
                        <h2>Create</h2>
                    </div>

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label class="control-label">Name</label>
                                    <input asp-for="QualificationName" class="form-control" />
                                    <span asp-validation-for="QualificationName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-success" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-controller="Qualifications" asp-action="List" class="btn btn-default">Overview</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
