@model ProjectManager.Core.Entities.Qualification

@{
    ViewData["Title"] = "Edit";
}
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="QualificationName" class="control-label"></label>
                <input asp-for="QualificationName" class="form-control" />
                <span asp-validation-for="QualificationName" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Timestamp" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Qualifications" asp-action="List" class="btn btn-default">Zur Übersicht</a>
</div>