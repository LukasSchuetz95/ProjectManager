@model ProjectManager.Web.Models.ViewModel.ProjectsEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeProject.Project.ProjectName" class="control-label"></label>
                <input asp-for="EmployeeProject.Project.ProjectName" class="form-control" />
                <span asp-validation-for="EmployeeProject.Project.ProjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Projekt-Manager</label>
                <select asp-for="EmployeeProject.EmployeeId" asp-items="@Model.ProjectManagers" class="form-control"></select>
                <span asp-validation-for="EmployeeProject.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeProject.Project.Status" class="control-label"></label>
                <select asp-for="EmployeeProject.Project.Status" asp-items="Html.GetEnumSelectList<ProjectManager.Core.Enum.ProjectStatusType>()" class="form-control"></select>
                <span asp-validation-for="EmployeeProject.Project.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeProject.Project.Information" class="control-label"></label>
                <input asp-for="EmployeeProject.Project.Information" class="form-control" />
                <span asp-validation-for="EmployeeProject.Project.Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeProject.Project.Enddate" class="control-label"></label>
                <input asp-for="EmployeeProject.Project.Enddate" class="form-control" />
                <span asp-validation-for="EmployeeProject.Project.Enddate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeProject.Project.ValuedTime" class="control-label"></label>
                <input asp-for="EmployeeProject.Project.ValuedTime" class="form-control" />
                <span asp-validation-for="EmployeeProject.Project.ValuedTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeProject.Project.Deadline" class="control-label"></label>
                <input asp-for="EmployeeProject.Project.Deadline" class="form-control" />
                <span asp-validation-for="EmployeeProject.Project.Deadline" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="EmployeeProject.Timestamp" />
            <input type="hidden" asp-for="EmployeeProject.Id" />
            <input type="hidden" asp-for="EmployeeProject.ProjectId" />
            <div class="form-group">
                <input type="submit" value="Speichern" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Projects" asp-action="List" class="btn btn-default">Zur Übersicht</a>
</div>
