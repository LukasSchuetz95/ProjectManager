@model ProjectManager.Web.Models.ViewModel.TasksListViewModel

@{
    ViewData["Title"] = "List";
}

<head>
    <title>Abgeschlossene Tasks</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Tasks</h2>
                </div>

                <div class="panel-body">

                    <a asp-area="" asp-controller="Tasks" asp-action="Create" class="btn btn-primary">Create Generale Task</a>

                    <h3>Tasks Overview</h3>

                    <a asp-area="" asp-controller="Tasks" asp-action="FinishList" class="btn btn-primary">Finish Tasks</a>
                    <a asp-area="" asp-controller="Tasks" asp-action="OpenList" class="btn btn-primary">Open Tasks</a>
                    <a asp-area="" asp-controller="Tasks" asp-action="InProgressList" class="btn btn-primary"> Tasks in Process</a>

                    <form asp-controller="Tasks" asp-action="List">
                        <div class="form-group">
                            <input asp-for="FilterTaskName" class="form-control" />
                            <span asp-validation-for="FilterTaskName" class="text-danger"></span>
                        </div>
                        <input type="submit" value="Filter Task Name" class="btn btn-primary" />
                    </form>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>Task</th>
                                <th>Deadline</th>
                    
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FilterTaskName != null)
                            {
                                @foreach (var task in Model.Tasks.OrderByDescending(t => t.Deadline))
                                {
                                    <tr>
                                        <td>@task.TaskName</td>
                                        <td>@task.Deadline</td>

                                        <td title="Detail"><a asp-controller="Tasks" asp-action="Details" asp-route-taskId="@task.Id"><i class="fas fa-info"></i></a></td>
                                        <td title="Edit"><a asp-controller="Tasks" asp-action="Edit" asp-route-projectId="@task.Id"><i class="fa fa-edit"></i></a></td>
                                        <td title="Delete"><a asp-controller="Tasks" asp-action="Delete" asp-route-taskId="@task.Id"><i class="far fa-trash-alt"></i></a></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                @foreach (var task in Model.Tasks.OrderByDescending(t => t.Deadline))
                                {

                                    <tr>
                                        <td>@task.TaskName</td>
                                        <td>@task.Deadline</td>

                                        <td title="Detail"><a asp-controller="Tasks" asp-action="Details" asp-route-taskId="@task.Id"><i class="fas fa-info"></i></a></td>
                                        <td title="Edit"><a asp-controller="Tasks" asp-action="Edit" asp-route-projectId="@task.Id"><i class="fa fa-edit"></i></a></td>
                                        <td title="Delete"><a asp-controller="Tasks" asp-action="Delete" asp-route-taskId="@task.Id"><i class="far fa-trash-alt"></i></a></td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    <a asp-area="" asp-controller="Tasks" asp-action="List" class="btn btn-primary">Up</a>
                </div>
            </div>
        </div>
    </div>
</div>