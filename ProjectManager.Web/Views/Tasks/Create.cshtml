@model ProjectManager.Web.Models.ViewModel.TasksCreateViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.TaskName" class="control-label"></label>
                <input asp-for="EmployeeTask.Task.TaskName" class="form-control" />
                <span asp-validation-for="EmployeeTask.Task.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.Priority" class="control-label"></label>
                <select asp-for="EmployeeTask.Task.Priority" asp-items="Html.GetEnumSelectList<ProjectManager.Core.Enum.PriorityType>()" class="form-control"></select>
                <span asp-validation-for="EmployeeTask.Task.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.Status" class="control-label"></label>
                <select asp-for="EmployeeTask.Task.Status" asp-items="Html.GetEnumSelectList<ProjectManager.Core.Enum.TaskStatusType>()" class="form-control"></select>
                <span asp-validation-for="EmployeeTask.Task.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.Information" class="control-label"></label>
                <input asp-for="EmployeeTask.Task.Information" class="form-control" />
                <span asp-validation-for="EmployeeTask.Task.Information" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.Startdate" class="control-label"></label>
                <input asp-for="EmployeeTask.Task.Startdate" type="date" class="form-control" />
                <span asp-validation-for="EmployeeTask.Task.Startdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.Enddate" class="control-label"></label>
                <input asp-for="EmployeeTask.Task.Enddate" type="date" class="form-control" />
                <span asp-validation-for="EmployeeTask.Task.Enddate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.Deadline" class="control-label"></label>
                <input asp-for="EmployeeTask.Task.Deadline" type="date" class="form-control" />
                <span asp-validation-for="EmployeeTask.Task.Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeTask.Task.ValuedTime" class="control-label"></label>
                <input asp-for="EmployeeTask.Task.ValuedTime" class="form-control" />
                <span asp-validation-for="EmployeeTask.Task.ValuedTime" class="text-danger"></span>
            </div>

            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Job</th>
                    </tr>
                </thead>

            </table>
            <div>
                <a asp-area="" asp-controller="Projects" asp-action="List" class="btn btn-default">Zur Übersicht</a>
            </div>
            <div>
                <a asp-area="" asp-controller="TasksEmployee" asp-action="Create" class="btn btn-sucess">  Mitarbeiter anlegen</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Task anlegen" class="btn btn-sucess" />
            </div>
            <div class="form-group">
                <input type="submit" value="Mitarbeiter hinzufügen" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<li><a asp-area="" asp-controller="Tasks" asp-action="List" class="btn btn-primary">Zurück</a></li>

