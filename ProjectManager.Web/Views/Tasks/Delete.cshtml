@model ProjectManager.Core.Entities.Task

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Wollen Sie das Projekt @Model.TaskName wirklich löschen ?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TaskName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TaskName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Information)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Information)
        </dd>
        </dl>
    <form asp-action="DeleteConfirm" asp-route-taskId="@Model.Id">
        <input type="submit" value="Löschen" class="btn btn-danger" />
        <a asp-action="List" class="btn btn-default">Zur Übersicht</a>
    </form>
</div>


