@model ProjectManager.Web.Models.ViewModel.TasksListViewModel

@{
    ViewData["Title"] = "Abgeschlossene Tasks";
}


<h3>Abgeschlossene Tasks</h3>




<table class="table">

    <div>
        <form asp-controller="Tasks" asp-action="FinishList">
            <div class="form-group">
                <input asp-for="FilterTaskName" type="search" class="form-control" />
                <span asp-validation-for="FilterTaskName" class="text-danger"></span>
            </div>
            <input type="submit" value="Filter Task Name" class="btn btn-primary" />
        </form>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Task</th>
                <th>Deadline</th>
                @*<th>Projekt</th>*@
            </tr>
        </thead>
        <tbody>
            @if (Model.FilterTaskName != null)
            {
                @foreach (var task in Model.CompletedTasks)
                {
                    <tr>
                        <td>@task.TaskName</td>
                        <td>@task.Deadline</td>
                        @*<td>@task.Project.ProjectName</td>*@
                        <td>
                            <a asp-controller="Tasks" asp-action="Details" asp-route-taskId="@task.Id">Details</a>
                        </td>
                    </tr>

                }
            }
            else
            {
                @foreach (var task in Model.CompletedTasks)
                {
                    <tr>
                        <td>@task.TaskName</td>
                        <td>@task.Deadline</td>
                        @*<td>@task.Project.ProjectName</td>*@
                        <td>
                            <a asp-controller="Tasks" asp-action="Details" asp-route-taskId="@task.Id">Details</a>
                        </td>
                    </tr>

                }
            }
        </tbody>
        </table>
    </table>

    <a asp-area="" asp-controller="Tasks" asp-action="List" class="btn btn-primary">Zurück</a>
