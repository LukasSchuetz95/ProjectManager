@model ProjectManager.Web.Models.ViewModel.TasksListViewModel
@{
    ViewData["Title"] = "InProgressList";
}

<h3>Tasks in Bearbeitung</h3>

<form asp-controller="Tasks" asp-action="InProgessList">
    <div class="form-group">
        <input asp-for="FilterTaskName" class="form-control" />
        <span asp-validation-for="FilterTaskName" class="text-danger"></span>
    </div>
    <input type="submit" value="Filter Task Name" class="btn btn-primary" />
</form>


<table class="table">
    <thead>
        <tr>
            <th>Task</th>
            <th>Deadline</th>
            <th>Project</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.FilterTaskName != null)
        {
            @foreach (var task in Model.ProcessingTasks)
            {
                <tr>
                    <td>@task.TaskName</td>
                    <td>@task.Deadline</td>
                    @*<td>@task.Project.ProjectName</td>*@
                    <td>
                        <a asp-controller="Tasks" asp-action="Details" asp-route-taskId="@task.Id">Details</a> |
                    </td>
                </tr>

            }
        }
        else
        {
            @foreach (var task in Model.ProcessingTasks)
            {
                <tr>
                    <td>@task.TaskName</td>
                    <td>@task.Deadline</td>
                    @*<td>@task.Project.ProjectName</td>*@
                    <td>
                        <a asp-controller="Tasks" asp-action="Details" asp-route-taskId="@task.Id">Details</a> |
                    </td>
                </tr>

            }
        }
    </tbody>
</table>

<a asp-area="" asp-controller="Tasks" asp-action="List" class="btn btn-primary">Zurück</a>

