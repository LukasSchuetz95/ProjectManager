@model ProjectManager.Web.Models.ViewModel.TasksEditViewModel


@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2>Edit Tasks</h2>
                </div>

                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Tasks.Information" class="control-label"></label>
                                    <input asp-for="Tasks.Information" class="form-control" />
                                    <span asp-validation-for="Tasks.Information" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Tasks.Status" class="control-label"></label>
                                    <select asp-for="Tasks.Status" asp-items="Html.GetEnumSelectList<ProjectManager.Core.Enum.TaskStatusType>()" class="form-control"></select>
                                    <span asp-validation-for="Tasks.Status" class="text-danger"></span>
                                </div>
                                @*Qualifikationen hinzufügen über eigene View*@
                                <div class="form-group">
                                    <label asp-for="Tasks.Priority" class="control-label"></label>
                                    <select asp-for="Tasks.Priority" asp-items="Html.GetEnumSelectList<ProjectManager.Core.Enum.PriorityType>()" class="form-control"></select>
                                    <span asp-validation-for="Tasks.Priority" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Mitarbeiter</label>
                                    <select asp-for="EmployeeTask.EmployeeId" asp-items="@Model.Employees" class="form-control"><option></option></select>
                                    <span asp-validation-for="EmployeeTask.EmployeeId" class="text-danger"></span>
                                </div>
                                @*<div class="form-group">
                                    <label class="control-label">Mitarbeiter</label>
                                    <select asp-for="EmployeeTask.Employee" asp-items="@Model.Employees" class="form-control"></select>
                                    <span asp-validation-for="EmployeeTask.Employee" class="text-danger"></span>*@
                                @*</div>*@

                                @*<input asp-for="Em.Id" type="hidden" />*@
                                <input type="hidden" asp-for="Tasks.Project" />
                                <input type="hidden" asp-for="Tasks.ProjectId" />
                                <input type="hidden" asp-for="Tasks.TaskName" />
                                <input type="hidden" asp-for="Tasks.FixedTask" />
                                <input type="hidden" asp-for="Tasks.Created" />
                                <input type="hidden" asp-for="Tasks.Enddate" />
                                <input type="hidden" asp-for="Tasks.ValuedTime" />
                                <input type="hidden" asp-for="Tasks.Deadline" />
                                <input type="hidden" asp-for="Tasks.Id" />
                                <input type="hidden" asp-for="Project" />
                                <input type="hidden" asp-for="ProjectId" />
                                <input type="hidden" asp-for="Tasks.Timestamp" />
                                <input type="hidden" asp-for="Tasks" />


                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                </div>
                            </form>
                        </div>
                    </div>




                    <a asp-area="" asp-controller="Tasks" asp-action="List" class="btn btn-primary">Zurück</a>
                </div>
            </div>
        </div>
    </div>
</div>